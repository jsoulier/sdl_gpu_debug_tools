{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--parallel",
                "8"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
        },
        {
            "label": "shaders",
            "type": "shell",
            "command": "build_shaders.sh",
            "windows": {
                "command": "/usr/bin/bash",
                "args": [
                    "--login",
                    "-i",
                    "build_shaders.sh"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
        },
        {
            "label": "all",
            "dependsOn": [
                "cmake",
                "shaders"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
        }
    ]
}